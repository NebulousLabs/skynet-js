{
  "name": "skynet-js",
  "version": "3.0.0-beta",
  "description": "Sia Skynet Javascript Client",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "browserslist": [
    "defaults",
    "not IE 11",
    "not OperaMini all"
  ],
  "scripts": {
    "test": "jest --coverage --coverageDirectory ../coverage",
    "build": "rimraf dist && babel src --out-dir dist --extensions .ts --ignore src/**/*.test.ts && tsc --project tsconfig.build.json",
    "lint:eslint": "eslint --ext .ts utils src --max-warnings 0",
    "lint:tsc": "tsc",
    "prepublishOnly": "yarn build"
  },
  "jest": {
    "testTimeout": 60000,
    "clearMocks": true,
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "rootDir": "src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ext .ts --fix",
      "tsc --esModuleInterop --noemit",
      "prettier --write"
    ],
    "*.{json,yml,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NebulousLabs/skynet-js.git"
  },
  "keywords": [
    "sia",
    "skynet"
  ],
  "author": "Karol Wypchlo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NebulousLabs/skynet-js/issues"
  },
  "homepage": "https://github.com/NebulousLabs/skynet-js",
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "axios": "^0.21.0",
    "base32-encode": "^1.1.1",
    "base64-js": "^1.3.1",
    "blakejs": "^1.1.0",
    "buffer": "^6.0.1",
    "mime-db": "^1.45.0",
    "node-forge": "^0.10.0",
    "path-browserify": "^1.0.1",
    "randombytes": "^2.1.0",
    "url-join": "^4.0.1",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/base64-js": "^1.3.0",
    "@types/jest": "^26.0.14",
    "@types/mime-db": "^1.43.0",
    "@types/node": "^14.11.2",
    "@types/node-forge": "^0.9.5",
    "@types/randombytes": "^2.0.0",
    "@types/url-join": "^4.0.0",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "axios-mock-adapter": "^1.18.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^7.11.0",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-jsdoc": "^30.7.8",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  }
}
